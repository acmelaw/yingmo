VITE_APP_NAME=Vue Notes
VITE_APP_VERSION=2.0.0

# Collaboration Settings (Optional)
# Enable collaborative editing features
VITE_ENABLE_COLLAB=false

# Sync Mode: 'offline' | 'websocket' | 'auto'
# - offline: No server connection, local-only
# - websocket: Always use server (fails if unavailable)
# - auto: Gracefully degrade to offline when server unavailable (recommended)
VITE_SYNC_MODE=auto

# WebSocket Sync Server URL (only needed if VITE_SYNC_MODE=websocket or auto)
# Leave empty or comment out for offline-only mode
VITE_COLLAB_SERVER=ws://localhost:4444

# API endpoints
VITE_API_URL=http://localhost:8000/api
