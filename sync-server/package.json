{
  "name": "vue-notes-sync-server",
  "version": "2.0.0",
  "description": "Modern sync server for Vue Notes with Fastify, Better Auth, and Unicode support",
  "type": "module",
  "main": "dist/server.js",
  "scripts": {
    "dev": "tsx watch server.ts",
    "build": "tsc && node scripts/copy-migration.js",
    "start": "node dist/server.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "type-check": "tsc --noEmit",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "tsx db/migrate.ts",
    "db:studio": "drizzle-kit studio",
    "docker:build": "docker build -t vue-notes-sync .",
    "docker:run": "docker run -p 4444:4444 vue-notes-sync",
    "clean": "rm -rf dist",
    "prebuild": "npm run clean && npm run lint && npm run type-check"
  },
  "dependencies": {
    "@better-auth/core": "^1.0.0",
    "@fastify/cors": "^9.0.1",
    "@fastify/websocket": "^10.0.1",
    "@node-rs/argon2": "^1.8.0",
    "better-auth": "^1.0.0",
    "better-sqlite3": "^11.0.0",
    "drizzle-orm": "^0.33.0",
    "fastify": "^4.28.1",
    "jose": "^5.2.0",
    "lib0": "^0.2.94",
    "ws": "^8.16.0",
    "y-protocols": "^1.0.6",
    "yjs": "^13.6.10",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.11",
    "@types/node": "^20.11.30",
    "@types/ws": "^8.5.10",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "@vitest/coverage-v8": "^2.1.9",
    "drizzle-kit": "^0.24.0",
    "eslint": "^8.57.1",
    "tsx": "^4.7.1",
    "typescript": "^5.4.5",
    "vitest": "^2.1.9"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
