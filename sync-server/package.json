{
  "name": "vue-notes-sync-server",
  "version": "2.0.0",
  "description": "Multi-tenant WebSocket sync server for Vue Notes with Better Auth integration",
  "type": "module",
  "main": "dist/server.js",
  "scripts": {
    "dev": "tsx watch server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "tsx db/migrate.ts",
    "db:studio": "drizzle-kit studio",
    "docker:build": "docker build -t vue-notes-sync .",
    "docker:run": "docker run -p 4444:4444 vue-notes-sync"
  },
  "dependencies": {
    "@better-auth/core": "^1.0.0",
    "@node-rs/argon2": "^1.8.0",
    "better-auth": "^1.0.0",
    "drizzle-orm": "^0.33.0",
    "express": "^4.18.3",
    "jose": "^5.2.0",
    "lib0": "^0.2.94",
    "mysql2": "^3.9.1",
    "postgres": "^3.4.3",
    "ws": "^8.16.0",
    "y-protocols": "^1.0.6",
    "yjs": "^13.6.10",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.30",
    "@types/ws": "^8.5.10",
    "better-sqlite3": "^9.4.0",
    "drizzle-kit": "^0.24.0",
    "tsx": "^4.7.1",
    "typescript": "^5.4.5"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
